$('#result').addClass('<%= check_result ? 'right' : 'wrong' %>');
$('#result').html('<%= html_escape(check_result ? "Congratulations! You're right." : "Oops! You are wrong somewhere.") %>');
$('#right_ans').html('<%= html_escape(@check.right_answer) %>')
