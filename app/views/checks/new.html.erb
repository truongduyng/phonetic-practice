<div class="container home">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-md-6">
      <%= form_for @check, remote: true do |form| %>
        <div style="min-height: 6em;">
          <h2><%= t(:question) %>  <a href="#" id="refresh_question"><i class="fa fa-refresh" aria-hidden="true"></i></a></h2>
          <p class="question"></p>
          <%= form.text_field :question, hidden: true  %>
        </div>
        <h2><%= t(:answer) %></h2>
        <%= form.text_area :answer, { rows: 5, required: true, autofocus: true } %>
        <p style="text-align: center; padding-top: 20px; clear: both;">
          <%= form.button t(:check), class: "btn btn-primary"  %>
        </p>
        <div class='checking_loading'>
          <p><%= t(:patient) %></p>
        </div>
      <% end %>
    </div>
    <div class="col-xs-12 col-sm-6 col-md-6">
      <div class="col-xs-12" style="min-height: 7em;">
        <h2><%= t(:result) %></h2>
        <div class='checking_loading'>
          <p><i class="fa fa-spinner fa-spin fa-2x" aria-hidden="true"></i></p>
        </div>
        <p id="result"></p>
      </div>
      <div class="col-xs-12">
        <h2><%= t(:right_ans) %></h2>
        <div class='checking_loading'>
          <p><i class="fa fa-spinner fa-spin fa-2x" aria-hidden="true"></i></p>
        </div>
        <p id="right_ans"></p>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12">
      <h1 class="center"><%= t(:how_to_use) %></h1>
    </div>
    <div class="col-xs-12">
      <table class="phonetic_keyboard">
        <thead>
          <tr>
            <th>Gõ liên tục</th>
            <% ipa_keys.each do |key| %>
              <th><%= key %></th>
            <% end %>
          </tr>
        </thead>
        <body>
          <tr>
            <td>Hiển thị</td>
            <% ipa_list.each do |phonetic| %>
              <td><%= phonetic %></td>
            <% end %>
          </tr>
        </body>
      </table>
    </div>
  </div>
</div>
